---
import Button from "./Button.astro";
---

<section
  class="w-full h-screen flex flex-col justify-center items-center lg:px-56"
>
  <div>
    <img src="images/logo.svg" alt="logo" />
  </div>
  <div class="flex flex-col items-center justify-center py-4">
    <div class="text-center py-4">
      <h1 class="text-4xl font-semibold text-dark-grayish-blue mb-4">
        A history of everything you copy
      </h1>
      <p class="text-grayish-blue text-lg lg:px-32">
        Clipboard allows you to track and organize everything you copy.
        Instantly access your clipboard on all your devices.
      </p>
    </div>
    <div class="py-4 flex flex-col gap-4 w-full lg:flex-row lg:justify-center">
      <Button
        textButton={"Download for iOS"}
        ,
        colorBg={"bg-strong-cyan"}
        ,
        borderBg={"border-[#1b9685]"}
        ,
        hoverBg={"hover:bg-[#2cd1b9]"}
      />
      <Button
        textButton={"Download for Mac"}
        ,
        colorBg={"bg-light-blue"}
        ,
        borderBg={"border-[#4754b7]"}
        ,
        hoverBg={"hover:bg-[#808eff]"}
      />
    </div>
  </div>
</section>
